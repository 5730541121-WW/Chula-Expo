<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes">

  <title>Login</title>

  <!-- Libery -->
  <script src="public/lib/webcomponentsjs/webcomponents-lite.min.js"></script>
  <!-- Polymer -->
  <link rel="import" href="/public/lib/polymer/polymer.html">
  <!-- Icon Component -->
  <link rel="import" href="/public/lib/iron-icons/iron-icons.html">
  <link rel="import" href="/public/lib/paper-icon-button/paper-icon-button.html">
  <!-- Web Component -->
  <link rel="import" href="/public/lib/app-layout/app-drawer-layout/app-drawer-layout.html">
  <link rel="import" href="/public/lib/app-layout/app-drawer/app-drawer.html">
  <link rel="import" href="/public/lib/app-layout/app-scroll-effects/app-scroll-effects.html">
  <link rel="import" href="/public/lib/app-layout/app-header/app-header.html">
  <link rel="import" href="/public/lib/app-layout/app-header-layout/app-header-layout.html">
  <link rel="import" href="/public/lib/app-layout/app-toolbar/app-toolbar.html">
  <link rel="import" href="/public/lib/iron-flex-layout/iron-flex-layout.html">
  <link rel="import" href="/public/lib/iron-media-query/iron-media-query.html">
  <link rel="import" href="/public/lib/paper-input/paper-input.html">
  <link rel="import" href="/public/lib/paper-item/paper-item.html">
  <link rel="import" href="/public/lib/paper-menu/paper-menu.html">
  <link rel="import" href="/public/lib/paper-button/paper-button.html">
  <link rel="import" href="/public/lib/paper-tabs/paper-tabs.html">
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', 'Noto', sans-serif;
      background-color: #fafafa;
    }
  </style>
</head>
<body unresolved>
<dom-module id="x-app">
  <template>
    <style>
      app-toolbar {
        background-color: #1E88E5;
        color: white;
      }
      .main-header {
        box-shadow: 0px 5px 6px -3px rgba(0, 0, 0, 0.4);
      }
      paper-tabs {
        --paper-tabs-selection-bar-color: white;
        height: 100%;
        max-width: 640px;
      }
      paper-tab {
        --paper-tab-ink: #f6f6f6;
        text-transform: uppercase;
      }
      [hidden] {
        display: none !important;
      }
      section {
        padding: 88px 16px;
      }
      .container {
        @apply(--layout-horizontal);
        max-width: 800px;
        margin: 0 auto;
      }
      .container > * {
        @apply(--layout-flex);
      }
      a paper-button,
      a:active paper-button,
      a:visited paper-button {
        color: #000;
      }
    </style>
    <app-drawer-layout force-narrow>
      <app-drawer id="drawer">
        <!-- Toolbar -->
        <app-toolbar></app-toolbar>
        <!-- Navbar on mobile: side nav menu -->
        <paper-menu selected="{{selected}}" attr-for-selected="name">
          <template is="dom-repeat" items="{{items}}">
            <paper-item name="{{item}}">{{item}}</paper-item>
          </template>
        </paper-menu>
      </app-drawer>

      <app-header-layout>
        <app-header class="main-header">

          <app-toolbar>
            <paper-icon-button class="menu-button" icon="menu" drawer-toggle hidden$="{{wideLayout}}"></paper-icon-button>
          </app-toolbar>

          <app-toolbar class="tabs-bar" hidden$="{{!wideLayout}}">
            <!-- Nav on desktop: tabs -->
            <paper-tabs selected="{{selected}}" attr-for-selected="name">
              <template is="dom-repeat" items="{{items}}">
                <paper-tab name="{{item}}">{{item}}</paper-tab>
              </template>
            </paper-tabs>
          </app-toolbar>

        </app-header>
      </app-header-layout>

      <!-- Content Gose Here -->
      <!-- Form -->
      <section id="local">
        <div class="container">
          <form method="post">
            <paper-input label="E-mail">
              <iron-icon icon="mail" prefix></iron-icon>
              <div suffix>@email.com</div>
            </paper-input>
            <paper-input always-float-label label="Password"></paper-input>
            <paper-button raised> Login</paper-button>
          </form>
        </div>
      </section>
      <section id="local">
        <div class="container">
          <a href="auth/facebook" tabindex="-1">
            <paper-button raised>
              <iron-icon icon="favorite"></iron-icon>
              Facebook
            </paper-button>
          </a>
        </div>
      </section>
    </app-drawer-layout>
    <iron-media-query query="min-width: 600px" query-matches="{{wideLayout}}"></iron-media-query>
  </template>
  <!-- Polymer Module -->
  <script>
    Polymer({
      is: 'x-app',
      properties: {
        selected: {
          type: String,
          value: 'Item One'
        },
        wideLayout: {
          type: Boolean,
          value: false,
          observer: 'onLayoutChange',
        },
        items: {
          type: Array,
          value: function() {
            return ['Item One', 'Item Two', 'Item Three', 'Item Four', 'Item Five'];
          }
        }
      },
      onLayoutChange: function(wide) {
        var drawer = this.$.drawer;
        if (wide && drawer.opened) {
          drawer.opened = false;
        }
      }
    });
  </script>
</dom-module>
<x-app></x-app>
</body>
</html>